@page
@model FrontlineTCG.Web.Pages.Cards.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Card</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Card.CardType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.CardType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Card.CardName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.CardName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Card.CostMaterial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.CostMaterial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Card.CostManpower)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Card.CostManpower)
        </dd>
        @if (Model.UnitCard != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitCard.HP)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitCard.HP)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitCard.DmgUnarmored)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitCard.DmgUnarmored)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitCard.DmgArmored)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitCard.DmgArmored)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitCard.DmgStructure)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitCard.DmgStructure)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitCard.DmgAir)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitCard.DmgAir)
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Card.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
